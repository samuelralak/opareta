# Opareta Infrastructure Environment Configuration
# ================================================
# Copy this file to .env and fill in the values
#
# cp .env.example .env
#

# =============================================================================
# Docker Registry (GitHub Container Registry)
# =============================================================================
# Format: ghcr.io/username/
# Example: ghcr.io/samuelralak/
DOCKER_REGISTRY=ghcr.io/your-github-username/
IMAGE_TAG=latest

# GitHub PAT for pulling images (needs read:packages scope)
# Create at: https://github.com/settings/tokens
GHCR_TOKEN=

# =============================================================================
# Database Credentials
# =============================================================================
# Argus (Auth Service) Database
ARGUS_DB_HOST=localhost
ARGUS_DB_PORT=5432
ARGUS_DB_USER=argus
ARGUS_DB_PASSWORD=change_me_in_production
ARGUS_DB_NAME=argus_db

# Hermes (Payments Service) Database
HERMES_DB_HOST=localhost
HERMES_DB_PORT=5433
HERMES_DB_USER=hermes
HERMES_DB_PASSWORD=change_me_in_production
HERMES_DB_NAME=hermes_db

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_EXPIRATION_SECONDS=7200

# Generate keys with:
#   openssl genpkey -algorithm RSA -out private.pem -pkeyopt rsa_keygen_bits:2048
#   openssl rsa -pubout -in private.pem -out public.pem
#
# Then convert to single line for env vars:
#   awk 'NF {sub(/\r/, ""); printf "%s\\n",$0;}' private.pem
#   awk 'NF {sub(/\r/, ""); printf "%s\\n",$0;}' public.pem

JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# =============================================================================
# Monitoring
# =============================================================================
GRAFANA_ADMIN_PASSWORD=change_me_in_production
GRAFANA_ROOT_URL=http://localhost:3100

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_DIR=/var/backups/opareta
BACKUP_RETENTION_DAYS=7

# =============================================================================
# Deployment Configuration
# =============================================================================
HEALTH_CHECK_RETRIES=30
HEALTH_CHECK_INTERVAL=2
