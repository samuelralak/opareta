{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @opareta/argus with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "@opareta/argus"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/argus/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @opareta/hermes with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "@opareta/hermes"],
      "env": {
        "NODE_OPTIONS": "--inspect=9230"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/hermes/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}
