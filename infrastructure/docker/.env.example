# Opareta Production Environment Variables
# ==========================================
# Copy this file to .env and fill in the values

# =============================================================================
# Docker Registry Configuration
# =============================================================================
DOCKER_REGISTRY=ghcr.io/samuelralak/
IMAGE_TAG=latest

# =============================================================================
# Argus Server Variables (for docker-compose.argus.yml)
# =============================================================================

# Database password for Argus PostgreSQL
ARGUS_DB_PASSWORD=<secure-password-here>

# JWT keys (base64 encoded)
# Generate with:
#   openssl genrsa -out jwt-private.pem 2048
#   openssl rsa -in jwt-private.pem -pubout -out jwt-public.pem
#   JWT_PRIVATE_KEY=$(cat jwt-private.pem | base64 | tr -d '\n')
#   JWT_PUBLIC_KEY=$(cat jwt-public.pem | base64 | tr -d '\n')
JWT_PRIVATE_KEY=<base64-encoded-private-key>
JWT_PUBLIC_KEY=<base64-encoded-public-key>

# JWT token expiration (in seconds, default: 2 hours)
JWT_EXPIRATION_SECONDS=7200

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=<secure-password-here>

# Grafana root URL (for proper link generation)
GRAFANA_ROOT_URL=https://argus.weekone.app:3100

# =============================================================================
# Hermes Server Variables (for docker-compose.hermes.yml)
# =============================================================================

# Database password for Hermes PostgreSQL
HERMES_DB_PASSWORD=<secure-password-here>

# Argus server IP for Redis and JWKS
# Note: JWKS_URI is hardcoded in compose file to use domain
ARGUS_SERVER_IP=159.223.65.64
